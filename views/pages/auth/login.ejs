<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Đăng nhập</title>
    <%- include('../../partials/header.ejs') %>
  </head>
  <body>
    <%- include('../../partials/navbar.ejs') %>
    <div class="container">
      <div class="row">
        <div class="col-md-6 offset-md-3">
          <div class="signup-form">
            <form
              method="POST"
              action="/auth/login"
              class="mt-5 border p-4 bg-white shadow"
            >
              <h4 class="mb-5 text-secondary text-center">Đăng nhập</h4>
              <div class="row">
                <div class="mb-3 col-md-12">
                  <label>Tài khoản<span class="text-danger">*</span></label>
                  <input
                    type="text"
                    name="username"
                    class="form-control"
                    required
                  />
                </div>
                <div class="mb-3 col-md-12">
                  <label>Mật khẩu<span class="text-danger">*</span></label>
                  <input
                    type="password"
                    name="password"
                    class="form-control"
                    required
                  />
                </div>
                <% if(typeof msg !== "undefined"){ %>
                <div class="mb-3 col-md-12">
                  <div class="badge bg-danger text-wrap" style="width: 100%">
                    <%= msg %>
                  </div>
                </div>
                <% } %>

                <div class="col-md-12">
                  <div class="row justify-content-between">
                    <div class="col-4">
                      <button class="btn btn-primary">Đăng nhập</button>
                    </div>
                    <div class="col-4">
                      <a href="/auth/verify-email">Quên mật khẩu</a>
                    </div>
                  </div>
                </div>
              </div>
            </form>
            <p class="text-center mt-3 text-secondary">
              Bạn chưa có tài khoản ? <a href="/auth/register">Đăng kí</a>
            </p>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
