<div class="jumbotron">
  <div class="container">
    <div class="row justify-content-between">
      <div class="col-4">
        <h3>Danh sách sản phẩm</h3>
      </div>
      <div class="col-4 d-flex flex-row-reverse">
        <!-- Button trigger modal -->
        <button
          type="button"
          class="btn btn-primary"
          data-bs-toggle="modal"
          data-bs-target="#createModal"
        >
          Thêm sản phẩm
        </button>
      </div>
    </div>
  </div>

  <table class="table">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Hình ảnh</th>
        <th scope="col">Tên sản phẩm</th>
        <th scope="col">Mô tả</th>
        <th scope="col">Đánh giá</th>
        <th scope="col">Giá</th>
      </tr>
    </thead>
    <tbody>
      <% products.forEach(function(item, index) { %>
      <tr>
        <th scope="row"><%= index+1 %></th>
        <td>
          <img src="<%= item.imageUrl %>" height="50px" width="50px" />
        </td>
        <td><%= item.name %></td>
        <td><%= item.description %></td>
        <td><%= item.rate %></td>
        <td><%= item.price %></td>
        <td>
          <svg
            data-bs-toggle="modal"
            data-bs-target="#editModal"
            style="cursor: pointer"
            onclick='editProduct("<%= item._id %>")'
            xmlns="http://www.w3.org/2000/svg"
            width="16"
            height="16"
            fill="currentColor"
            class="bi bi-pencil-square"
            viewBox="0 0 16 16"
          >
            <path
              d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z"
            />
            <path
              fill-rule="evenodd"
              d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z"
            />
          </svg>
          <svg
            onclick='deleteItem("<%= item._id %>")'
            style="cursor: pointer"
            xmlns="http://www.w3.org/2000/svg"
            width="16"
            height="16"
            fill="currentColor"
            class="bi bi-trash"
            viewBox="0 0 16 16"
          >
            <path
              d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5Zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5Zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6Z"
            />
            <path
              d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1ZM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118ZM2.5 3h11V2h-11v1Z"
            />
          </svg>
        </td>
      </tr>
      <% }); %>
    </tbody>
  </table>
  <nav aria-label="Page navigation example">
    <ul class="pagination">
      <li class="page-item">
        <a class="page-link" href="#" aria-label="Previous">
          <span aria-hidden="true">&laquo;</span>
        </a>
      </li>

      <li class="page-item">
        <a class="page-link" href="/admin/products/list?page=1">1</a>
      </li>
      <li class="page-item">
        <a class="page-link" href="/admin/products/list?page=2">2</a>
      </li>
      <li class="page-item">
        <a class="page-link" href="/admin/products/list?page=3">3</a>
      </li>
      <li class="page-item">
        <a class="page-link" href="/admin/products/list?page=3">4</a>
      </li>
      <li class="page-item">
        <a class="page-link" href="/admin/products/list?page=3">5</a>
      </li>
      <li class="page-item">
        <a class="page-link" href="#" aria-label="Next">
          <span aria-hidden="true">&raquo;</span>
        </a>
      </li>
    </ul>
  </nav>
  <div
    class="modal fade"
    id="createModal"
    tabindex="-1"
    aria-labelledby="createModal"
    aria-hidden="true"
  >
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="createModal">Thêm sản phẩm</h5>
          <button
            type="button"
            class="btn-close"
            data-bs-dismiss="modal"
            aria-label="Close"
          ></button>
        </div>
        <div class="modal-body">
          <input type="file" name="file" />
          <button onclick="uploadImage()">Xem ảnh</button>

          <form class="row g-3" action="/admin/products/add" method="post">
            <div class="col-md-12">
              <img src="<%= urlUploaded %>" height="100px" width="100px" />
              <input
                style="display: none"
                type="text"
                class="form-control"
                name="imageUrl"
                id="imageUrl"
                value="<%= urlUploaded %>"
              />
            </div>
            <div class="col-md-6">
              <label for="name" class="form-label">Tên sản phẩm</label>
              <input
                type="text"
                class="form-control"
                id="name"
                name="name"
                placeholder="Nhập tên"
              />
            </div>
            <div class="col-6">
              <label for="price" class="form-label">Giá</label>
              <input
                type="number"
                class="form-control"
                id="price"
                name="price"
                placeholder="Nhập giá"
              />
            </div>
            <div class="col-6">
              <label for="rate" class="form-label">Đánh giá</label>
              <input
                type="number"
                class="form-control"
                id="rate"
                name="rate"
                placeholder="Nhập đánh giá"
              />
            </div>
            <div class="col-6">
              <label for="description" class="form-label">Mô tả</label>
              <input
                type="text"
                class="form-control"
                id="description"
                name="description"
                placeholder="Nhập mô tả"
              />
            </div>

            <div class="col-12">
              <div class="modal-footer">
                <button
                  type="button"
                  class="btn btn-secondary"
                  data-bs-dismiss="modal"
                >
                  Đóng
                </button>
                <button type="submit" class="btn btn-primary">Thêm</button>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
  <div
    class="modal fade"
    id="editModal"
    tabindex="-1"
    aria-labelledby="editModal"
    aria-hidden="true"
  >
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="editModal">Chỉnh sửa sản phẩm</h5>
          <button
            type="button"
            class="btn-close"
            data-bs-dismiss="modal"
            aria-label="Close"
          ></button>
        </div>
        <div class="modal-body">
          <input type="file" name="file" />
          <button onclick="uploadImage()">Xem ảnh</button>

          <div id="formEdit"></div>
        </div>
      </div>
    </div>
  </div>
</div>
<script></script>
